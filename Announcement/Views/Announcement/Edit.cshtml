@model Announcement.Models.AnnouncementC
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Edit</h1>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <b>Name</b>
                @Html.EditorFor(model => model.Title, new { @class = "control-lable col-md-2" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <b>Description</b>
                @Html.EditorFor(model => model.Description, new { @class = "control-lable col-md-2" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="form-group">
                <input type="submit" formmethod="post" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

